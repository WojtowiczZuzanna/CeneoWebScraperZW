{% extends "base.html.jinja" %}
{% block title %}
    Ekstrakcja opinii
{% endblock title %}

{% block content %}
    
    {% if error is defined %}
        <div class="alert alert-dark alert-dismissible fade show" role="alert">
            <strong> <i class="bi bi-exclamation-diamond-fill"></i>Uwaga!</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
        </div>
    {% endif %}
    <form method="POST" action="{{url_for('extract')}}" class="container">
        <div class="row g-3 align-items-center">
            <div class="col-auto">
                <label for="product_id" class="col-form-label">Kod produktu z Ceneo.pl</label>
            </div>
            <div class="col-auto">
                <input type="text" name="product_id" id="product_id" class="form-control" aria-describedby="product_idHelpInline" placeholder="Podaj kod produktu" required>
            </div>
            <div class="col-auto">
                <span id="product_idHelpInline" class="form-text">
                Kod prooduktu musi zawieraÄ‡ 5-10 cyfr.
                </span>
            </div>
            <div class="col-auto">
                <button type="Submit" class="btn btn-dark"> Pobierz opinie</button>
            </div>
        </div>
    </form>
{% endblock content %}